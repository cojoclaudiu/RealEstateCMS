@page "/buildings"
@page "/buildings/{phaseId:int}"
@rendermode InteractiveServer

@using RealEstateCMS.Components.Shared.Icons

<PageTitle>Clădiri</PageTitle>

<div class="page-header">
    <h1>Clădiri @(selectedPhase != null ? $"- {selectedPhase.Name}" : "")</h1>
    <div style="display: flex; gap: 1rem;">
        @if (PhaseId.HasValue && selectedPhase != null)
        {
            <a href="/buildings/create/@PhaseId" class="btn btn-primary">
                <span class="icon">+</span> Adaugă Clădire
            </a>
        }
    </div>
</div>

@if (!PhaseId.HasValue)
{
    <div class="form-group">
        <label>Selectează Development</label>
        <select class="form-control" @onchange="OnDevelopmentChanged">
            <option value="">-- Selectează --</option>
            @foreach (var dev in developments)
            {
                <option value="@dev.DevelopmentId">@dev.Name</option>
            }
        </select>
    </div>

    @if (selectedDevelopmentId.HasValue)
    {
        <div class="form-group">
            <label>Selectează Fază</label>
            <select class="form-control" @onchange="OnPhaseChanged">
                <option value="">-- Selectează --</option>
                @foreach (var phase in phases)
                {
                    <option value="@phase.PhaseId">@phase.Name</option>
                }
            </select>
        </div>
    }
}

@if (buildings == null)
{
    <p class="loading">Se încarcă...</p>
}
else if (!buildings.Any())
{
    <div class="empty-state">
        <p>Nu există clădiri @(selectedPhase != null ? $"pentru {selectedPhase.Name}" : "").</p>
        @if (PhaseId.HasValue)
        {
            <a href="/buildings/create/@PhaseId" class="btn btn-primary">
                Creează prima clădire
            </a>
        }
    </div>
}
else
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Nume</th>
                    <th>Fază</th>
                    <th>Development</th>
                    <th>Unități (Plots)</th>
                    <th>Imagini</th>
                    <th class="actions-column">Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var building in buildings)
                {
                    <tr>
                        <td><strong>@building.Name</strong></td>
                        <td>@building.Phase.Name</td>
                        <td>@building.Phase.Development.Name</td>
                        <td><span class="badge">@building.Plots.Count</span></td>
                        <td><span class="badge">@building.Images.Count</span></td>
                        <td class="actions-column">
                            <div class="action-buttons">
                                <a href="/buildings/edit/@building.BuildingId" class="btn btn-sm btn-secondary" title="Editează">
                                    <EditIcon />
                                </a>
                                <button @onclick="() => DeleteBuilding(building)" class="btn btn-sm btn-danger" title="Șterge">
                                    <DeleteIcon />
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}