@page "/developments"
@using RealEstateCMS.Components.Shared.Actions
@rendermode InteractiveServer

<PageTitle>Developments</PageTitle>

<div class="page-header">
    <h1>Developments</h1>
    <a href="/developments/create" class="btn btn-primary">
        <span class="icon">+</span> Adaugă Development
    </a>
</div>

@if (developments == null)
{
    <p class="loading">Se încarcă...</p>
}
else if (!developments.Any())
{
    <div class="empty-state">
        <p>Nu există developments încă.</p>
        <a href="/developments/create" class="btn btn-primary">Creează primul development</a>
    </div>
}
else
{
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Nume</th>
                    <th>Locație</th>
                    <th>Data creării</th>
                    <th>Faze</th>
                    <th class="actions-column">Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dev in developments)
                {
                    <tr>
                        <td>
                            <strong>@dev.Name</strong>
                        </td>
                        <td>@(dev.Location ?? "-")</td>
                        <td>@dev.CreatedAt.ToString("dd.MM.yyyy")</td>
                        <td>
                            <span class="badge">@dev.Phases.Count faze</span>
                        </td>
                        <td class="actions-column">
                            <EditDeleteActions
                                EditUrl="@($"/developments/edit/{dev.DevelopmentId}")"
                                OnDelete="() => DeleteDevelopment(dev.DevelopmentId)"/>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}
