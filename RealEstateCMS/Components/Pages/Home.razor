@page "/"

@inject ApplicationDbContext DbContext

<PageTitle>Dashboard - Real Estate CMS</PageTitle>

<div class="page-header">
    <h1>Dashboard</h1>
</div>

<!-- Stats Grid -->
<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.25rem; margin-bottom: 3rem;">
    
    <div class="stats-card">
        <div class="stats-header">
            <div class="stats-icon" style="background: hsl(217 91% 60% / 0.1); color: hsl(217 91% 60%);">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
            </div>
            <div class="stats-content">
                <div class="stats-label">Developments</div>
                <div class="stats-value">@developmentsCount</div>
            </div>
        </div>
        <a href="/developments" class="stats-link">
            Vizualizează
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </a>
    </div>

    <div class="stats-card">
        <div class="stats-header">
            <div class="stats-icon" style="background: hsl(262 83% 58% / 0.1); color: hsl(262 83% 58%);">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
            </div>
            <div class="stats-content">
                <div class="stats-label">Faze</div>
                <div class="stats-value">@phasesCount</div>
            </div>
        </div>
        <a href="/phases" class="stats-link">
            Vizualizează
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </a>
    </div>

    <div class="stats-card">
        <div class="stats-header">
            <div class="stats-icon" style="background: hsl(43 96% 56% / 0.1); color: hsl(43 96% 56%);">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
            </div>
            <div class="stats-content">
                <div class="stats-label">Clădiri</div>
                <div class="stats-value">@buildingsCount</div>
            </div>
        </div>
        <a href="/buildings" class="stats-link">
            Vizualizează
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </a>
    </div>

    <div class="stats-card">
        <div class="stats-header">
            <div class="stats-icon" style="background: hsl(142 76% 36% / 0.1); color: hsl(142 76% 36%);">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
            </div>
            <div class="stats-content">
                <div class="stats-label">Tipuri Locuințe</div>
                <div class="stats-value">@houseTypesCount</div>
            </div>
        </div>
        <a href="/housetypes" class="stats-link">
            Vizualizează
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </a>
    </div>

    <div class="stats-card">
        <div class="stats-header">
            <div class="stats-icon" style="background: hsl(336 84% 50% / 0.1); color: hsl(336 84% 50%);">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
            </div>
            <div class="stats-content">
                <div class="stats-label">Unități (Plots)</div>
                <div class="stats-value">@plotsCount</div>
            </div>
        </div>
        <a href="/plots" class="stats-link">
            Vizualizează
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </a>
    </div>

    <div class="stats-card">
        <div class="stats-header">
            <div class="stats-icon" style="background: hsl(199 89% 48% / 0.1); color: hsl(199 89% 48%);">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="24" height="24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
            </div>
            <div class="stats-content">
                <div class="stats-label">Imagini</div>
                <div class="stats-value">@imagesCount</div>
            </div>
        </div>
        <a href="/images" class="stats-link">
            Vizualizează
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </a>
    </div>

</div>

<!-- Quick Actions -->
<div>
    <h2 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 1rem; color: hsl(var(--foreground));">Acțiuni Rapide</h2>
    <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
        <a href="/developments/create" class="btn btn-primary">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Adaugă Development
        </a>
        <a href="/housetypes" class="btn btn-secondary">Gestionează Tipuri</a>
        <a href="/plots" class="btn btn-secondary">Gestionează Unități</a>
    </div>
</div>

@code {
    private int developmentsCount;
    private int phasesCount;
    private int buildingsCount;
    private int houseTypesCount;
    private int plotsCount;
    private int imagesCount;

    protected override async Task OnInitializedAsync()
    {
        developmentsCount = await DbContext.Developments.CountAsync();
        phasesCount = await DbContext.Phases.CountAsync();
        buildingsCount = await DbContext.Buildings.CountAsync();
        houseTypesCount = await DbContext.HouseTypes.CountAsync();
        plotsCount = await DbContext.Plots.CountAsync();
        imagesCount = await DbContext.Images.CountAsync();
    }
}