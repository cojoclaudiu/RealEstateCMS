<div style="margin-top: 2rem; padding-top: 2rem; border-top: 2px solid #e5e7eb;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
        <h3>Imagini</h3>

        <a href="@AddImageUrl" class="btn btn-primary btn-sm">
            <span class="icon">+</span> Adaugă Imagine
        </a>
    </div>

    @if (Images.Any())
    {
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 1rem;">
            @foreach (var image in Images)
            {
                <div style="border: 1px solid #e5e7eb; border-radius: 0.375rem; padding: 0.5rem;">
                    <img src="@image.ImageUrl"
                         alt="@image.AltText"
                         style="width: 100%; height: 150px; object-fit: cover; border-radius: 0.25rem;" />

                    <div style="margin-top: 0.5rem; font-size: 0.75rem;">
                        @if (image.IsPrimary)
                        {
                            <span class="badge" style="background-color: #10b981; color: white;">
                                Principală
                            </span>
                        }

                        <p style="margin: 0.25rem 0; color: #6b7280;">
                            @image.FileName
                        </p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="form-text">Nu există imagini încărcate.</p>
    }
</div>